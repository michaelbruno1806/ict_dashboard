<body>
<div class="container">
    <h1>Meraki Devices</h1>

    <form method="post">
        <label>Filter by status:</label>
        <select name="status">
            <option value="">All</option>
            <option value="online" {% if filter_status == 'online' %}selected{% endif %}>Online</option>
            <option value="offline" {% if filter_status == 'offline' %}selected{% endif %}>Offline</option>
            <option value="alerting" {% if filter_status == 'alerting' %}selected{% endif %}>Alerting</option>
        </select>

        <label>Filter by hotel:</label>
        <select name="hotel">
            <option value="">All</option>
            {% for hotel in hotel_list %}
            <option value="{{ hotel }}" {% if filter_hotel == hotel %}selected{% endif %}>{{ hotel }}</option>
            {% endfor %}
        </select>

        <button type="submit">Apply</button>
    </form>

    <table>
        <thead>
        <tr>
            <th>Hotel</th>
            <th>Device Name</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for device in system_data %}
        <tr>
            <td>{{ device.Hotel }}</td>
            <td>{{ device.Name }}</td>
            <td>{{ device.Status }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Graphique Chart.js -->
    <canvas id="statusChart" height="100"></canvas>
</div>

<script>
    const deviceData = {{ system_data|tojson }};
    const statusCountPerHotel = {};

    deviceData.forEach(device => {
        const hotel = device.Hotel || 'Unknown';
        const status = device.Status || 'Unknown';

        if (!statusCountPerHotel[hotel]) {
            statusCountPerHotel[hotel] = {online: 0, offline: 0, alerting: 0, unknown: 0};
        }

        if (['online', 'offline', 'alerting'].includes(status)) {
            statusCountPerHotel[hotel][status]++;
        } else {
            statusCountPerHotel[hotel]['unknown']++;
        }
    });

    const hotels = Object.keys(statusCountPerHotel);
    const onlineCounts = hotels.map(h => statusCountPerHotel[h].online);
    const offlineCounts = hotels.map(h => statusCountPerHotel[h].offline);
    const alertingCounts = hotels.map(h => statusCountPerHotel[h].alerting);
    const unknownCounts = hotels.map(h => statusCountPerHotel[h].unknown);

    const ctx = document.getElementById('statusChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: hotels,
            datasets: [
                {
                    label: 'Online',
                    data: onlineCounts,
                    backgroundColor: '#28a745'
                },
                {
                    label: 'Offline',
                    data: offlineCounts,
                    backgroundColor: '#dc3545'
                },
                {
                    label: 'Alerting',
                    data: alertingCounts,
                    backgroundColor: '#ffc107'
                },
                {
                    label: 'Unknown',
                    data: unknownCounts,
                    backgroundColor: '#6c757d'
                }
            ]
        },
        options: {
            responsive: true,
            scales: {
                x: { stacked: true },
                y: { stacked: true, beginAtZero: true }
            },
            plugins: {
                title: {
                    display: true,
                    text: 'Status Breakdown by Hotel'
                }
            }
        }
    });
</script>
</body>
